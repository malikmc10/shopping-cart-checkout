@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <a class="btn btn-primary" style="auto" asp-controller="User" asp-action="Register">
        Add New User
    </a>

    foreach (var user in Model)
    {

        <div class="card mb-3">
            <div class="card-header">
               User Id: @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title"> @user.UserName</h5>
            </div>
            <div class="card-footer">

                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-primary" asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id">Edit</a>
                    <button type="submit"  class="btn btn-danger" onclick="return confirm('Are You Sure You Want To Delete User: @user.UserName')">Delete</button>
                </form>
            </div>
        </div>


    }
}
else
{
        <div class="card">
            <div class="card-header">
                No User Created Yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use The Button Below To Create A User
                </h5>
            </div>
            <a class="btn btn-primary" style="width:auto" asp-controller="User" asp-action="Register">
                Add User
            </a>


        </div>
}